# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=tauon
POSTGRES_USER=tauon
POSTGRES_PASSWORD=changeme

# API Security
TAUON_API_KEY=dev-key

# CORS Configuration
# Add frontend URLs separated by commas (e.g., "http://localhost:5173,http://localhost:3000")
CORS_ORIGINS=http://localhost:5173

# Azure OpenAI (optional)
# AZURE_OPENAI_API_BASE=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_KEY=your-key
# AZURE_OPENAI_EMBED_DEPLOYMENT=text-embedding-ada-002
# AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4
# AZURE_OPENAI_API_VERSION=2023-05-15

# OpenAI (optional - fallback if Azure not configured)
# OPENAI_API_KEY=sk-...
# IMPORTANT: Choose embedding model based on your needs:
# - text-embedding-3-large: 3072 dimensions (best quality, more expensive)
# - text-embedding-3-small: 1536 dimensions (good quality, cheaper)
# - text-embedding-ada-002: 1536 dimensions (legacy, cheaper)
# Default is text-embedding-3-large (3072 dimensions)
# OPENAI_EMBED_MODEL=text-embedding-3-large
# OPENAI_CHAT_MODEL=gpt-4o-mini

# Sentence Transformers (CPU fallback)
SENTENCE_TRANSFORMER=all-MiniLM-L6-v2

# Microsoft SharePoint (optional)
# MS_TENANT_ID=your-tenant-id
# MS_CLIENT_ID=your-client-id
# MS_CLIENT_SECRET=your-client-secret
# MS_SP_SITE_HOST=yourtenant.sharepoint.com
# MS_SP_SITE_PATH=/sites/YourSite
# MS_SP_DRIVE_NAME=Documents
